<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyActivity">

    <ImageView
        android:id="@+id/fondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/tienda"
        />
    <ImageView
        android:id="@+id/productos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/productos"
        android:layout_marginLeft="50dp"
        android:layout_alignTop="@+id/fondo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="140dp" />

   <ImageView
       android:id="@+id/ventas"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/ventas"
       android:layout_alignTop="@+id/productos"
       android:layout_alignParentRight="true"
       android:layout_alignParentEnd="true"
       android:layout_marginRight="44dp" />

    <ImageView
        android:id="@+id/estadisticas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/promociones"
        android:layout_alignTop="@+id/promociones"
        android:layout_alignLeft="@+id/productos"
        android:layout_alignStart="@+id/productos" />

    <ImageView
        android:id="@+id/promociones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/estadisticas"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/ventas"
        android:layout_alignLeft="@+id/ventas"
        android:layout_alignStart="@+id/ventas" />
</RelativeLayout>
