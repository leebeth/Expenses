<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:id="@+id/img_ventas"
            android:src="@drawable/ventas"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/title_activity_historial_ventas"
            android:id="@+id/label_historialVentas"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_ventas"
            android:layout_toEndOf="@+id/img_ventas" />

    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="335dp"
        android:id="@+id/ventas_lista"
        android:layout_weight="0.79" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="51dp"
        android:layout_above="@+id/label_carrito"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2">


    </RelativeLayout>

</LinearLayout>
